<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="NumberStyle" parent="AppTheme">
    <item name="android:textSize">80sp</item>
    <item name="android:textColor">@color/numberColor</item>
  </style>

  <style name="TallyStyle" parent="AppTheme">
    <item name="android:textSize">20sp</item>
  </style>

  <style name="TransformNameStyle" parent="TallyStyle">
    <item name="android:textColor">#00C000</item>
  </style>

  <!--<style name="PassiveCorrectStyle" parent="TallyStyle">-->
    <!--<item name="android:textColor">#808080</item>-->
  <!--</style>-->

  <style name="ImageNameStyle" parent="TallyStyle">
    <item name="android:textColor">#C00000</item>
  </style>

</resources>
